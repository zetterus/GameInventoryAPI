@page
@model GameInventoryAPI.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<h2>Login</h2>

<form method="post">
    <div>
        <label for="Username">Username:</label>
        <input type="text" id="Username" name="Username" asp-for="Username" />
        <span asp-validation-for="Username" style="color:red"></span>
    </div>
    <div>
        <label for="Password">Password:</label>
        <input type="password" id="Password" name="Password" asp-for="Password" />
        <span asp-validation-for="Password" style="color:red"></span>
    </div>
    <button type="submit">Login</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p style="color:red">@Model.Message</p>
}