@page "/AdminPanel"
@model GameInventoryAPI.Pages.AdminPanelModel
@{
    ViewData["Title"] = "Admin Panel";
}

<div class="admin-container">
    <h2>Admin Panel</h2>
    <div class="button-group">
        <a asp-page="/Admin/AddItem" class="btn">Add New Item</a>
        <a asp-page="/Admin/ManageUsers" class="btn">Manage Users</a>
        <a asp-page="/Index" class="btn">Back to Home</a>
    </div>
</div>

<style>
    .admin-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 20px;
        background-color: var(--nav-bg-color); /* Используем цвет навигации для фона */
        border-radius: 8px;
        box-shadow: 0 2px 10px var(--shadow-color);
    }

    h2 {
        color: var(--text-color);
        font-size: 28px;
        margin-bottom: 30px;
        text-align: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .button-group {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        justify-content: center;
    }

    .btn {
        display: inline-block;
        padding: 8px 16px;
        font-size: 16px;
        font-weight: 500;
        text-decoration: none;
        border-radius: 5px;
        background-color: var(--button-bg-color);
        color: var(--text-color);
        border: none;
        transition: background-color 0.3s;
        cursor: pointer;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

        .btn:hover {
            background-color: var(--button-hover-bg-color);
        }
</style>